<?xml version="1.0" encoding="utf-8"?>
<!-- todo - can be renamed to tile (w/o light) and merged with dark mode colors -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/n_beta" />
            <corners android:radius="@dimen/table_corners"/>
            <solid
                android:color="@color/n_beta"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" >
            </padding>
        </shape>
    </item>
    <item>
        <ripple
            android:color="@color/n_ripple">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <corners android:radius="@dimen/table_corners"/>
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>